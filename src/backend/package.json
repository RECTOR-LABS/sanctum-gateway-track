{
  "name": "gateway-insights-backend",
  "version": "1.0.0",
  "description": "Backend API for Gateway Insights - Sanctum Gateway Track Hackathon",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "typecheck:strict": "tsc --noEmit --strict",
    "lint": "tsc --noEmit && echo 'No ESLint config - TypeScript checks only'",
    "clean": "lsof -ti:3001 | xargs kill -9 2>/dev/null || true",
    "test": "echo \"Error: no test specified\" && exit 1",
    "test:epic2": "tsx test-epic2-integration.ts",
    "db:test": "tsx database/test-connection.ts",
    "db:migrate": "tsx database/migrate.ts",
    "db:migrate:status": "tsx database/migrate.ts status"
  },
  "keywords": [
    "solana",
    "gateway",
    "sanctum",
    "analytics"
  ],
  "author": "RECTOR",
  "license": "MIT",
  "dependencies": {
    "@solana/web3.js": "^1.98.4",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "pg": "^8.16.3",
    "redis": "^5.8.3",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/node": "^24.7.1",
    "@types/pg": "^8.15.5",
    "@types/ws": "^8.18.1",
    "nodemon": "^3.1.10",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3"
  }
}
